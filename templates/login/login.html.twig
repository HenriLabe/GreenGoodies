{% extends 'base.html.twig' %}

{% block body %}

<h1>Se connecter</h1>

    {% if error is defined and error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div>
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_customer_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}



    <form method="post" {#action="{{ path('app_customer_login') }}"#}>
        <label for="email">Email:</label>
        <input type="email" id="email" name="_email" value="{% if last_username is defined %} {{ last_username }} {% endif %}" autocomplete="email" required autofocus>
        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        />
        <button type="submit">Se connecter</button>
        <a href="{{ path('app_customer_register') }}">Pas de compte ? S'inscrire</a>
    </form>

{% endblock %}
